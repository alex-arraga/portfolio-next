// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  lastname   String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  created_at  DateTime @default(now())
}

model TaskCompleted {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  created_at  DateTime @default(now())
}

model Calculator {
  id         Int      @id @default(autoincrement())
  expression String
  result     String
  created_at DateTime @default(now())
}

model Cars {
  id              Int      @id @default(autoincrement())
  city_mpg        Int
  class           String
  combination_mpg Int
  cylinders       Int
  displacement    Float
  drive           String
  fuel_type       String
  highway_mpg     Int
  make            String
  model           String
  transmission    String
  year            Int
  rented          Boolean
  liked           Boolean
  pay_method      String?
  duration_rented String?
  created_at      DateTime @default(now())
}
